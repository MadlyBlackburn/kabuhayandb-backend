{
  "name": "kabuhayandb-backend",
  "version": "1.0.0",
  "description": "The backend repository for Kabuhayan DB",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cssweng-skmlhoai/kabuhayandb-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/cssweng-skmlhoai/kabuhayandb-backend/issues"
  },
  "homepage": "https://github.com/cssweng-skmlhoai/kabuhayandb-backend#readme",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "vitest": "^3.2.3"
  }
}
